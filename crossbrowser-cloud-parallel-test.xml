<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="CostcoTestSuite" parallel="tests" thread-count="2">

    <test name="NavigationShopAllFunctionalityTest-chrome-cloud">
        <parameter name="browser" value="ch-cloud"/>
        <classes>
            <class name="com.costco.scripts.NavigationShopAllFunctionality"/>
            <class name="com.costco.scripts.CartFunctionality"/>
            <class name="com.costco.scripts.GetEmailOfferFunctionality"/>
            <class name="com.costco.scripts.RegisterFunctionality"/>
            <class name="com.costco.scripts.WarehouseLInkFunctionality" />
            <class name="com.costco.scripts.SigninFunctionality"/>
        </classes>
    </test>

    <test name="NavigationShopAllFunctionalityTest-firefox-cloud">
        <parameter name="browser" value="ff-grid"/>
        <classes>
            <class name="com.costco.scripts.NavigationShopAllFunctionality"/>
            <class name="com.costco.scripts.CartFunctionality"/>
            <class name="com.costco.scripts.GetEmailOfferFunctionality"/>
            <class name="com.costco.scripts.RegisterFunctionality"/>
            <class name="com.costco.scripts.WarehouseLInkFunctionality" />
            <class name="com.costco.scripts.SigninFunctionality"/>
        </classes>
    </test>



    <test name="NavigationShopAllFunctionalityTest-internet-explorerr-cloud">
        <parameter name="browser" value="ie-cloud"/>
        <classes>
            <class name="com.costco.scripts.NavigationShopAllFunctionality"/>
            <class name="com.costco.scripts.CartFunctionality"/>
            <class name="com.costco.scripts.GetEmailOfferFunctionality"/>
            <class name="com.costco.scripts.RegisterFunctionality"/>
            <class name="com.costco.scripts.WarehouseLInkFunctionality" />
            <class name="com.costco.scripts.SigninFunctionality"/>
        </classes>
    </test>

</suite>